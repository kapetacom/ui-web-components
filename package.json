{
    "name": "@blockware/ui-web-components",
    "version": "0.0.32",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "description": "Provides shared ReactJS components for implementing Blockware UI",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "blockware"
    ],
    "license": "MIT",
    "scripts": {
        "storybook": "start-storybook -s stories/assets",
        "prepublishOnly": "npm run build",
        "start": "nodemon -e js,jsx,less,ts,tsx,json --ignore dist/ --ignore node_modules/ --exec 'npm run build'",
        "build": "webpack",
        "build:less": "copyfiles -u 1 './src/**/*.less' dist/",
        "build:types": "tsc --emitDeclarationOnly --rootDir src --baseUrl src ",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "check": "npm run check:ts && npm run check:less",
        "check:ts": "tsc --noEmit",
        "check:less": "find ./src -name *.less -exec ./node_modules/less/bin/lessc -l {} \\;"
    },
    "peerDependencies": {
        "@blockware/ui-web-context": "^0.0.21",
        "@blockware/ui-web-types": "^0.0.22",
        "@blockware/ui-web-utils": "^0.0.13",
        "guid-typescript": "^1.0.9",
        "lodash": "^4.17.15",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.4",
        "react": ">=16",
        "react-dom": ">=16"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "@babel/plugin-proposal-decorators": "^7.18.10",
        "@babel/preset-typescript": "^7.18.6",
        "@blockware/ui-web-context": "^0.0.21",
        "@blockware/ui-web-types": "^0.0.22",
        "@blockware/ui-web-utils": "^0.0.13",
        "@sambego/storybook-state": "^2.0.1",
        "@storybook/addon-actions": "^6.5.10",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^6.5.10",
        "@storybook/addons": "^6.5.10",
        "@storybook/react": "^6.5.10",
        "@types/lodash": "4.14.149",
        "@types/node": "13.1.6",
        "@types/react": "16.9.35",
        "@types/react-dom": "16.9.8",
        "@types/yaml": "^1.2.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.2.5",
        "babel-plugin-import": "^1.13.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "copyfiles": "^2.4.1",
        "css-loader": "^6.7.1",
        "guid-typescript": "^1.0.9",
        "less": "^4.1.3",
        "less-loader": "^11.0.0",
        "lodash": "^4.17.15",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.4",
        "nodemon": "^2.0.19",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-toastify": "9.0.0",
        "socket.io-client": "^2.3.0",
        "style-loader": "^1.0.0",
        "typescript": "^3.4.5",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "yaml": "^1.6.0",
        "yaml-loader": "^0.5.0"
    }
}
