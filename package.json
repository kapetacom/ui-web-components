{
    "name": "@blockware/ui-web-components",
    "version": "0.0.15",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "description": "Provides shared ReactJS components for implementing Blockware UI",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "blockware"
    ],
    "license": "MIT",
    "scripts": {
        "storybook": "start-storybook",
        "prepublishOnly": "npm run build",
        "start": "nodemon -e js,jsx,less,ts,tsx,json --ignore dist/ --ignore node_modules/ --exec 'npm run build'",
        "build": "npm run build:types && npm run build:js && npm run build:less",
        "build:less": "copyfiles -u 1 './src/**/*.less' dist/",
        "build:types": "tsc --emitDeclarationOnly --rootDir src --baseUrl src ",
        "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
        "check": "npm run check:ts && npm run check:less",
        "check:ts": "tsc --noEmit",
        "check:less": "find ./src -name *.less -exec ./node_modules/less/bin/lessc -l {} \\;"
    },
    "dependencies": {
        "@types/lodash": "4.14.149",
        "@types/node": "13.1.6",
        "@types/react": "16.9.17",
        "@types/react-dom": "16.9.4",
        "@types/yaml": "^1.2.0"
    },
    "peerDependencies": {
        "@blockware/ui-web-context": "^0.0.16",
        "@blockware/ui-web-types": "^0.0.20",
        "@blockware/ui-web-utils": "^0.0.6",
        "guid-typescript": "^1.0.9",
        "lodash": "^4.17.15",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.4",
        "react": "^16.12.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@blockware/ui-web-context": "^0.0.16",
        "@blockware/ui-web-types": "^0.0.20",
        "@blockware/ui-web-utils": "^0.0.9",
        "@sambego/storybook-state": "^1.3.6",
        "@storybook/addon-actions": "^5.2.8",
        "@storybook/addon-info": "^5.0.11",
        "@storybook/addon-links": "^5.2.8",
        "@storybook/addons": "^5.0.10",
        "@storybook/react": "^5.3.3",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "babel-plugin-import": "^1.12.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "copyfiles": "^2.1.1",
        "css-loader": "^3.2.0",
        "guid-typescript": "^1.0.9",
        "less": "^3.9.0",
        "less-loader": "^5.0.0",
        "lodash": "^4.17.15",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.4",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-scripts": "^3.3.0",
        "socket.io-client": "^2.3.0",
        "style-loader": "^1.0.0",
        "typescript": "^3.4.5",
        "yaml": "^1.6.0",
        "yaml-loader": "^0.5.0"
    }
}
